{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "spotiamp",
  "version": "0.1.0",
  "identifier": "com.spotiamp.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "spotiamp",
        "width": 275,
        "height": 116,
        "decorations": false,
        "closable": false,
        "maximizable": false,
        "minimizable": false,
        "resizable": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}